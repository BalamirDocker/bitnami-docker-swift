{
  "v": "4.0",
  "workspace": {
    "name": "swift",
    "defaultEnv": "swift",
    "environments": [
      {
        "name": "swift",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1024
            },
            "source": {
              "type": "image",
              "location": "bitnami/swift:che-3.0-PREVIEW-6-r0"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "swift-sample",
        "type": "blank",
        "path": "/swift-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/bitnami/bitnami-docker-swift.git",
          "parameters": {
            "branch": "che",
            "keepVcs": "true"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "contrib" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "build and start",
        "type": "custom",
        "commandLine": "cd ${current.project.path}/app_template && swift build && ./.build/debug/app_template",
        "attributes": {}
      },
      {
        "name": "build sample project",
        "type": "custom",
        "commandLine": "mkdir ${current.project.path}/app_template && cd ${current.project.path}/app_template &&  swift-package init --type executable && swift build",
        "attributes": {}
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "properties": {
            "name": "build sample project"
          },
          "id": "runCommand"
        }
      ]
    }
  }
}
